@model List<BlogTableViewModel>
@inject BlogDbContext DbContext
<div class="container">

    @if (Model.Count == 0)
    {
        <div class="text-center">
            <h2>No blogs found.</h2>
            <p>Try a different search or check back later.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var blog in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card blog-card">
                        <div class="card-body">
                            <h5 class="card-title">@blog.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">By @blog.BlogOwner</h6>
                            <p class="card-text"><small class="text-muted">@blog.CreatedAt.ToString("dd MMMM yyyy")</small></p>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@blog.Id" class="btn btn-primary stretched-link">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>