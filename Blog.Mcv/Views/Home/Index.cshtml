@model List<BlogTableViewModel>

<div class="container">
    <h1 class="mb-4">Blogs</h1>
    @if (Model.Count == 0)
    {
        <div class="alert alert-danger">Blog Not Found!</div>
    }
    <div class="row">
        @foreach (var blog in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@blog.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@blog.BlogOwner</h6>
                        <p class="card-text"><small class="text-muted">@blog.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small></p>
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@blog.Id" class="btn btn-primary">Details</a>
                        @if (User.IsInRole("admin") || User.IsInRole("mod"))
                        {
                            <a asp-controller="Home" asp-action="DeleteBlogMod" asp-route-id="@blog.Id" class="btn btn-danger mt-3">Delete</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>