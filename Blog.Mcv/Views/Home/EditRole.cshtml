@model Blog.Mcv.Models.NewRoleViewModel

<h1>Edit User Role</h1>
<form asp-action="EditRole" asp-controller="Home" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Name : </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label>Permissions:</label>
        <div class="row">
            @for (int i = 0; i < Model.Permissions.Count; i++)
            {
                <div class="col-md-4">
                    <div class="form-check">
                        <input type="hidden" asp-for="Permissions[i].Name" />
                        <input type="checkbox" asp-for="Permissions[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="Permissions[i].IsSelected">@Model.Permissions[i].Name</label>
                    </div>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>