@model NewRoleViewModel

<form class="form" action="/Home/AddRole" method="post" autocomplete="off">
    <div class="control">
        <h1>New User Role</h1>
    </div>
    <div class="control block-cube block-input">
        <input asp-for="Name" placeholder="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <div class="bg-top">
            <div class="bg-inner"></div>
        </div>
        <div class="bg-right">
            <div class="bg-inner"></div>
        </div>
        <div class="bg">
            <div class="bg-inner"></div>
        </div>
    </div>

    <div class="form-group mt-3">
        <label>Permissions:</label>
        <div class="row">
            @for (int i = 0; i < Model.Permissions.Count; i++)
            {
                <div class="col-md-4">
                    <div class="form-check">
                        <input type="hidden" asp-for="Permissions[i].Name" />
                        <input type="checkbox" asp-for="Permissions[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="Permissions[i].IsSelected">@Model.Permissions[i].Name</label>
                    </div>
                </div>
            }
        </div>
    </div>

    <button class="btn block-cube block-cube-hover" type="submit">
        <div class="bg-top">
            <div class="bg-inner"></div>
        </div>
        <div class="bg-right">
            <div class="bg-inner"></div>
        </div>
        <div class="bg">
            <div class="bg-inner"></div>
        </div>
        <div class="text">Submit</div>
    </button>
</form>